{
  "name": "silentweb",
  "version": "1.1.1",
  "description": "SilentWeb — Extension Firefox open-source pour l’accessibilité (sous-titres, transcription, alertes visuelles).",
  "main": "web-ext.config.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "clean": "rimraf dist web-ext-artifacts && mkdir -p dist/content dist/worker dist/vendor",
    "build:inject": "terser src/content/inject.js -c -m -o dist/content/inject.min.js --source-map 'filename=inject.min.js.map,url=inject.min.js.map,includeSources'",
    "build:overlay:js": "terser src/content/overlay.js -c -m -o dist/content/overlay.min.js --source-map 'filename=overlay.min.js.map,url=overlay.min.js.map,includeSources'",
    "build:overlay:css": "cleancss -o dist/content/overlay.min.css --source-map src/content/overlay.css",
    "build:sw": "terser worker/sw.js -c -m -o dist/worker/sw.min.js --source-map 'filename=sw.min.js.map,url=sw.min.js.map,includeSources'",
    "build:ts": "tsc -p tsconfig.json",
    "build": "pnpm run clean && pnpm run build:ts && pnpm run build:inject && pnpm run build:overlay:js && pnpm run build:overlay:css && pnpm run build:sw",
    "build:all": "pnpm run build",
    "release": "pnpm run build:all && pnpm run ci:test && pnpm exec web-ext build --source-dir dist --artifacts-dir web-ext-artifacts",
    "dev": "web-ext run --source-dir dist --firefox=firefox-developer-edition",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "pnpm run test:unit",
    "test:unit": "vitest run --runInBand",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "audit:prod": "pnpm audit --prod",
    "test:perf": "playwright test --config playwright.perf.config.ts",
    "validate:locales": "node scripts/validate-locales.mjs",
    "locales:update": "node scripts/sync-language-labels.mjs",
    "locales:export": "node scripts/export-language-labels.mjs",
    "locales:lint": "node scripts/locales-lint.mjs",
    "locales:report": "node scripts/locales-report.mjs",
    "locales:pipeline": "node scripts/locales-pipeline.mjs",
    "locales:sync": "node scripts/locales-sync.mjs",
    "ci:test": "pnpm run validate:locales && vitest run --coverage",
    "serve:e2e": "vite --port 3000 --strictPort",
    "format": "prettier -w .",
    "prepublishOnly": "pnpm run build",
    "prepare": "simple-git-hooks"
  },
  "keywords": [
    "firefox-extension",
    "accessibility",
    "subtitles",
    "transcription",
    "silentweb"
  ],
  "author": "SilentWeb Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.0",
  "dependencies": {
    "opus-recorder": "^8.0.5",
    "webextension-polyfill": "^0.10.0"
  },
  "pnpm": {
    "overrides": {
      "node-fetch": "2.6.11"
    }
  },
  "devDependencies": {
    "@eslint/js": "8.57.0",
    "@playwright/test": "^1.55.1",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/node": "^22.18.6",
    "@vitest/coverage-v8": "2.1.9",
    "lint-staged": "^15.2.8",
    "clean-css-cli": "^5.6.3",
    "cssnano": "^7.1.1",
    "eslint": "8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "3.2.0",
    "simple-git-hooks": "^2.10.0",
    "jsdom": "^27.0.0",
    "node-fetch": "2.6.11",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "vite": "^5.4.10",
    "vitest": "2.1.9",
    "web-ext": "^7.11.0"
  },
  "resolutions": {
    "glob": "^10.3.10"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "pnpm exec eslint --fix",
      "pnpm exec prettier -w"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": "pnpm exec prettier -w"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  }
}
