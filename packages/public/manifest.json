{
  "manifest_version": 3,
  "name": "SilentWeb",
  "version": "1.0.0",
  "action": { "default_title": "SilentWeb" },
  "background": { "service_worker": "js/sw.js", "type": "module" },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["js/inject.js", "js/overlay.js"] }
  ],
  "permissions": [],
  "host_permissions": ["<all_urls>"],
  "browser_specific_settings": {
    "gecko": { "id": "silentweb@example.com", "strict_min_version": "109.0" }
  }
}
