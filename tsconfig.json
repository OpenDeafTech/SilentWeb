{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vitest", "node"],
    "baseUrl": "."
  },
  "include": ["src/**/*", "tests/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
